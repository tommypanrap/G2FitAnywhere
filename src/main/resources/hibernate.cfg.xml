<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name="hibernate.connection.password">123456</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/fitanywhere?serverTimezone=Asia/Taipei</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">true</property>
		<property name="hibernate.hbm2ddl.auto">validate</property>
		<property name="hibernate.current_session_context_class">thread</property>

		<mapping class="com.fitanywhere.user.model.UserVO"/>
		<mapping class="com.fitanywhere.social.model.SocialPostVO"/>
		<mapping class="com.fitanywhere.ad.model.AdVO"/>
		<mapping class="com.fitanywhere.adcarouselorder.model.AdCarouselOrderVO"/>
		<mapping class="com.fitanywhere.addate.model.AdDateVO"/>
		<mapping class="com.fitanywhere.adrecommandorder.model.AdRecommandOrderVO"/>
		<mapping class="com.fitanywhere.course.model.CourseVO"/>
		<mapping class="com.fitanywhere.user.model.UserVO"/>
		<mapping class="com.fitanywhere.announcement.model.AnnouncementVO"/>
		<mapping class="com.fitanywhere.coursedetail.model.CourseDetailVO"/>
		<mapping class="com.fitanywhere.order.model.OrderVO" />
		<mapping class="com.fitanywhere.discount.model.DiscountVO" />
		<mapping class="com.fitanywhere.detail.model.DetailVO" />

	</session-factory>
</hibernate-configuration>
